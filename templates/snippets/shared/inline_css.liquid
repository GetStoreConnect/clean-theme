{%- comment %}
  if you need conditional styles using liquid and CSS then you should place
  your inline CSS always wrapped by the <style> tag.
{%- endcomment %}

{%- if current_product.pricing.on_sale? %}
  <style>
    .sc-color-sale {
      color: var(--sc-shade-dark);
    }
    #SC-ProductDisplayDetails .sc-mb-tiny.sc-font-large {
      color: hsla(var(--sc-color-sale-h), var(--sc-color-sale-s), var(--sc-color-sale-l), 1);
    }
  </style>
{%- endif %}

{%- if current_product.pricing.on_sale? == false or current_product.pricing.deposit_required? == false %}
    <style>
    #SC-ProductDisplayDetails .sc-mb-tiny.sc-font-large {
      color: var(--sc-shade-darkest);
      font-size: var(--sc-font-large);
      font-weight: var(--sc-font-bold);
    }
  </style>
{%- endif %}

