      header.classList.add('SC-PageHeader');

      const heading = document.createElement('h1');
      heading.textContent = '{{ "products.grid.heading" | t }}';

      header.appendChild(heading);

      productGrid.insertAdjacentElement('beforebegin', header);
    }

    createGridHeader(productGrid);
  });
  </script>
{%- endif %}
