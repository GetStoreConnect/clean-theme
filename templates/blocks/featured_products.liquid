{%- liquid 
    assign alignment = content_block.alignment | default: blank
    assign count = content_block.products.size | default: 0

    case alignment
      when "left"
        assign alignment = "sc-align-items-left"
      when "center"
        assign alignment = "sc-align-items-center"
      when "right"
        assign alignment =  "sc-align-items-end"
    endcase
-%}

{%- if count >  4 %}
  {% require "scripts/featured-slider.js" %}
{%- endif %}

<section class="SC-FeaturedProducts sc-expand sc-me-large sc-md:me-xlarge"
         id="SC-ContentBlock-{{ content_block.identifier }}" data-alignment="{{ alignment }}">

  {%- if content_block.title != blank or content_block.subtitle %}
    <div class="SC-FeaturedProducts_header sc-flex-col{% if alignment != blank %} {{ alignment }}{% endif %}">
      {%- if content_block.title != blank %}
        <h2 class="sc-font-xxlarge sc-font-bold">{{ content_block.title }}</h2>
      {%- endif %}
      {%- if content_block.subtitle != blank %}
        <p class="sc-font-large">{{ content_block.subtitle }}</p>
      {%- endif %}
    </div>
  {%- endif %}

  {% if count <= 4 %}
    <div class="SC-FeaturedProducts_wrapper">
      <div class="sc-grid sc-two-to-four-column">
        {%- for product in content_block.products %}
          {%- render "products/simple_card", product: product %}
        {%- endfor %}
      </div>
    </div>
  {% elsif count >  4 %}
    <div class="SC-FeaturedProducts_wrapper">
      <div class="sc-flex" data-featured-slider="{{ content_block.identifier }}">
        {%- for product in content_block.products %}
          {%- render "products/simple_card", product: product %}
        {%- endfor %}
      </div>
    </div>
  {% endif %}

  {%- if content_block.link_label %}
    <div class="SC-FeaturedProducts_footer sc-flex sc-justify-center sc-mt-base">
      <a href="{{ content_block.link_target }}" class="sc-button sc-button-outline">
        <span>{{ content_block.link_label }}</span>
      </a>
    </div>
  {%- endif %}

</section>