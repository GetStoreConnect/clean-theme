<div class="sc-review">
  <div class="sc-review_wrapper sc-flex-col sc-justify-center sc-align-items-center" id="{{ content_block.identifier }}">
    <div class="sc-review_rating">
      {% render 'shared/icons/star', style_class: 'sc-icon-star', width: 17, height: 17 %}
      {% render 'shared/icons/star', style_class: 'sc-icon-star', width: 17, height: 17 %}
      {% render 'shared/icons/star', style_class: 'sc-icon-star', width: 17, height: 17 %}
      {% render 'shared/icons/star', style_class: 'sc-icon-star', width: 17, height: 17 %}
      {% render 'shared/icons/star', style_class: 'sc-icon-star', width: 17, height: 17 %}
    </div>

    {%- if content_block.title != blank %}
      <p class="sc-review_message sc-m-none sc-font-medium">
        {{ content_block.title }}
      </p>
    {%- endif %}

    {%- if content_block.subtitle != blank %}
      <p class="sc-review_content sc-m-none sc-font-medium sc-font-bold">
        {{ content_block.subtitle }}
      </p>
    {%- endif %}
  </div>
</div>