{%- comment %}
  key: blocks/single_card
  Multi-purpose card to populate the image, title and content fields if provided.
{%- endcomment %}
<div class="sc-card sc-pos-relative sc-shadow sc-overflow-hidden">
  <a href="{{ content_block.link_target }}" class="sc-card_body sc-expand sc-height-100">
    <div class="sc-card_image">
      {%- if content_block.image != blank %}
        <img src="{{ content_block.image.url }}" alt="{{ content_block.image.alt_text }}">
      {%- else %}
        <svg class="SC-Placeholder" width="800" viewBox="0 0 1 1">
          <rect width="100%" height="100%"></rect>
          <circle cx="50%" cy="50%" r="20%" fill="rgba(0,0,0,0.05)"/>
        </svg>
      {%- endif %}
    </div>
    {%- if content_block.title != blank %}
      <div class="sc-card_headline sc-mt-medium sc-ps-small">
        <h3>{{ content_block.title }}</h3>
      </div>
    {%- endif %}
    {%- if content_block.content %}
      <div class="sc-card_content sc-ps-small">
        {{ content_block.content }}
      </div>
    {%- endif %}
  </a>
</div>
