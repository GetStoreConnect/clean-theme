<div class="sc-faq-wrapper" id="{{ content_block.identifier }}">
  <h4 class="sc-faq-accordion sc-m-none sc-font-large sc-font-bold">
    <span class="sc-faq-accordion-icon-text-holder sc-flex sc-align-center">
      {%- render 'shared/icons/faq', style_class: 'sc-icon-faq' %}
      {%- if content_block.title != blank %}
        {{ content_block.title }}
      {%- endif %}
    </span>
  </h4>
  <div class="scFAQContent">
    <div class="scFAQContent-holder">
      {%- if content_block.content != blank %}
          {{ content_block.content }}
      {%- endif %}
    </div>
  </div>
</div>