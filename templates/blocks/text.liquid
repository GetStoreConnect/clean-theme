{% comment %} Supports title, subtitle,  image, and content fields {% endcomment %}
<div id="SC-ContentBlock-{{ content_block.identifier }}" class="SC-Text" data-cb="{{ content_block.identifier }}">
  {%- if content_block.title != blank %}
    <h2>{{ content_block.title }}</h2>
  {%- endif %}

  {%- if content_block.subtitle != blank %}
    <p class="sc-font-medium">{{ content_block.subtitle }}</p>
  {%- endif %}

  {%- if content_block.image != blank %}
    <div class="sc-display-block sc-mb">
      <img src="{{ content_block.image.url }}" alt="{{ content_block.image.alt_text }}">
    </div>
  {%- endif %}

  {%- if content_block.content %}
    {{ content_block.content }}
  {%- endif %}

  {%- if content_block.link_label != blank %}
    <div class="sc-mt-base">
      <a class="SC-Button SC-Button-secondary" href="{{ content_block.link_target }}" target="_blank">{{ content_block.link_label }}</a>
    </div>
  {%- endif%}
</div>
