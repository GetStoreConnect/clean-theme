{%- comment %}
  key: blocks/accordion_tab
{%- endcomment %}

<section class="SC-Accordion sc-bg-white sc-me-small sc-pe-small">
  <button class="SC-Accordion_header" type="button" data-accordion-trigger="{{ content_block.identifier }}">
    <!-- Heading -->
    <div class="SC-Accordion_header_heading">
      <h3 class="sc-m-none">{{ content_block.title }}</h3>
    </div>
    <div class="SC-Accordion_header_label"></div>
    <svg class="SC-Accordion_header_icon sc-m-none" data-accordion-icon="" viewBox="0 0 100 100">
    <rect x="0" y="42" width="100%" height="16" rx="8" fill="currentColor"></rect>
    <rect x="42" y="0" width="16" height="100%" rx="8" fill="currentColor"></rect>
    </svg>
  </button>
  <div class="SC-Accordion_body" aria-expanded="false" data-accordion-target="{{ content_block.identifier }}">
    {{ content_block.content }}
  </div>
</section>
